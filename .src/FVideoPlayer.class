Public Sub Form_Open()
  
  Dim Directory As String
  Dim Files As String[]
  Dim FileName As String
  
  ListView1.Clear
  
  Directory = FMain.TextBox_SaveTo.Text
  Files = Dir(Directory, "*.mp4")
  Files.Insert(Dir(Directory, "*.webm"))
  
  For Each FileName In Files
    If Not ListView1.Exist(Directory & "/" & FileName) Then
      ListView1.Add(Directory & "/" & FileName, FileName)
    Endif
  Next
  
  Me.Center
  
End

Public Sub ListView1_Click()
  
  If Not ListView1.Key = "" Then
    MediaView1.URL = ListView1.Key
